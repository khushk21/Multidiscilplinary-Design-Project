<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mdpgroup17.MapSettingsFragment">

    <Button
        android:id="@+id/btnStartPoint"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:text="Set Start Point"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintRight_toLeftOf="@id/btnAddObstacles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/btnResetMap"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:text="Reset Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/btnAddObstacles"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:text="Start Image Recognition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintRight_toLeftOf="@id/btnResetMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/btnStartFastestCar"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:text="Start Fastest Car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintRight_toLeftOf="@id/btnResetMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#194C7F"
        android:drawableLeft="@android:drawable/stat_sys_data_bluetooth"
        android:text="Bluetooth"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResetMap"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/btnChangeObsFace"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corner"
        android:text="Set Obstacle Face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartPoint"
        app:layout_constraintVertical_bias="0.157"
        />


</androidx.constraintlayout.widget.ConstraintLayout>